{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <div class="row justify-content-between">
        <a class="col-3 btn btn-secondary" href="{{ path('app_product_index') }}">Volver</a>
        <a class="col-3 btn btn-info" href="{{ path('app_product_edit', {'id': product.id}) }}">Editar</a>
        <div class="col-3 btn btn-danger">
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
        </tbody>
    </table>

    

{% endblock %}
