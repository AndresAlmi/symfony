{% extends 'base.html.twig' %}

{% block title %}Product Category{% endblock %}

{% block body %}
    <h1>Product Category</h1>
    <div class="row justify-content-between">
        <a class="col-3 btn btn-primary" href="{{ path('app_product_category_new') }}"> Nueva Categoria </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td>{{ product_category.id }}</td>
                <td>{{ product_category.name }}</td>
                <td>{{ product_category.code }}</td>
                <td>
                    <a class="btn" href="{{ path('app_product_category_show', {'id': product_category.id}) }}">mostrar</a>
                    <a class="btn" href="{{ path('app_product_category_edit', {'id': product_category.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No existen registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
