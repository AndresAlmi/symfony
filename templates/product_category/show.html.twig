{% extends 'base.html.twig' %}

{% block title %}Product Category{% endblock %}

{% block body %}
    <h1>Product Category</h1>
    <div class="row justify-content-between">
        <a class="col-3 btn btn-secondary" href="{{ path('app_product_category_index') }}">Volver</a>
        <a class="col-3 btn btn-info" href="{{ path('app_product_category_index', {'id': product_category.id}) }}">Editar</a>
        <div class="col-3 btn btn-danger">
            {{ include('product_category/_delete_form.html.twig') }}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_category.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product_category.code }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
